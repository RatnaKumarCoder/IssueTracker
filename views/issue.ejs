
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/project.css">

<main id="main-section" class="px-2">
    <div id="displayProjects">
        <h2>Projects</h2>
        <div class="single-project my-2 shadow-lg px-2 py-2">
            <div class="project-details">
                <h5> Project Name:  <%= proj.name %>  </h5>
                <p id="desc"> Project Description: <%= proj.description %> </p>
                <p>Project Author: <%= proj.author %>    </p>
            </div>
            <p class="d-inline-flex gap-1">
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                Create Issue
            </button>
            </p>
            <div class="collapse my-2" id="collapseExample">
                <div class="card card-body">
                    <form action="/project/<%= proj._id %>" method="post" class="d-flex flex-column justify-content-between">
                        <input class="my-2" type="text" name="issue_name" placeholder="issue name">
                        <textarea class="my-2" name="issue_description" placeholder="description"></textarea>
                        <select class="my-2" id="dropdown" name="label">
                            <<option disabled selected value> -- Select Label-- </option>
                            <option value="Bug" name="label">Bug</option>
                            <option value="UI/UX" name="label">UI/UX</option>
                            <option value="Documentation" name="label">Documentation</option>
                            <option value="Dependency" name="label">Dependency</option>
                        </select>
                        <input class="my-2" type="text" placeholder="Author" name="author">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </form>
                </div>
            </div>
            <hr>
            <div class='search-buttons'>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample">
                Search Issue
            </button>
            <div class="btn-group">
                <button type="button" class="btn btn-danger">Filter by Label</button>
                <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                  <span class="visually-hidden">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu">
                <form action="/issue/filterLabel" method="post" id="labelForm">
                    <li class="d-flex flex-row"> <input type="checkbox" class="dropdown-item mx-1" id="bug" name="label" value="Bug"> <label for="bug">Bug</label>  </li>
                    <li class="d-flex flex-row"> <input type="checkbox" class="dropdown-item mx-1" id="UI/UX" name="label" value="UI/UX"> <label for="UI/UX">UI/UX</label> </li>
                    <li class="d-flex flex-row" > <input type="checkbox" class="dropdown-item mx-1" id="Documentation" name="label" value="Documentation"> <label for="Documentation">Documentation</label>  </li>
                    <li class="d-flex flex-row"> <input type="checkbox" class="dropdown-item mx-1" id="Dependency" name="label" value="Dependency"> <label for="Dependency">Dependency</label> </li>
                    <li><hr class="dropdown-divider"></li>
                    <li> 
                    <!-- Button trigger modal -->
                    <button type="submit" class="btn btn-primary search-buttons mx-2">
                        Search
                    </button>
                    </li>
                </form>
                </ul>
              </div>
            </div>  
            <div class="collapse" id="collapseExample1">
                <div class="card card-body search-buttons">
                    <form action="/issue" method="post" id="issueform">
                        <input type="text" name="search" placeholder="Title/Description/Author">
                        <input type="hidden" name="project" value="<%= proj._id %>"> 
                        <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Submit</button>
                    </form>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Displaying project issues</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="titledescription">
                                    <div>
                                       
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Understood</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="displayProjectsAll" class="my-2">
        <div class="project1">
            
        </div>
    </div>

</main>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
